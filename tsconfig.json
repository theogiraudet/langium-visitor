{
    "exclude": ["node_modules", "dist"],
    "compilerOptions": {
      "declaration": true,
      "target": "ESNext",
      "module": "Node16",
      "rootDir": "./src",
      "outDir": "./dist",
      "moduleResolution": "node16",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,  
      "strict": true,
      "skipLibCheck": true,
      "sourceMap": true
    }
}